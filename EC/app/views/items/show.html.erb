<h1>商品詳細<h1>


<table>
  <thead>
    <tr>
        <th>タイトル</th>
        <th>商品説明</th>
        <th>税抜き価格</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @item.name %></td>
      <td><%= @item.introduction %></td>
      <td><%= @item.price %></td>
      <td></td>
    </tr>
  </tbody>
</table>
<%= form_with model: @cart_item, local:true do |f| %>
  <%= f.select :amount, *[1..9] %>
  <%= f.submit 'カートに入れる' %>
<% end %> 