<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
        <th>タイトル</th>
        <th>商品説明</th>
        <th>税抜き価格</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.introduction %></td>
      <td><%= item.price %></td>
      <td><%= link_to "詳細", item_path(item) %></td>
    </tr>
    <% end %>
  </tbody>
</table>